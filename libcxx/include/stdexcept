#ifndef _LIBCPP_STDEXCEPT
#define _LIBCPP_STDEXCEPT

/*
    stdexcept synopsis

namespace std
{

class logic_error;
class domain_error;
class invalid_argument;
class length_error;
class out_of_range;
class runtime_error;
class range_error;
class overflow_error;
class underflow_error;

for each class xxx_error:

class xxx_error : public exception // at least indirectly
{
public:
    explicit xxx_error(const string& what_arg);
    explicit xxx_error(const char*   what_arg);

    virtual const char* what() const noexcept // returns what_arg
};

}  // std

*/

#include <__config>
#include <__exception/exception.h>
#include <__fwd/string.h>
#include <__type_traits/is_constant_evaluated.h>
#include <__verbose_abort>
#include <new>

#if !defined(_LIBCPP_HAS_NO_PRAGMA_SYSTEM_HEADER)
#  pragma GCC system_header
#endif

_LIBCPP_BEGIN_NAMESPACE_STD

#ifndef _LIBCPP_ABI_VCRUNTIME
class __libcpp_refstring {
  const char* __imp_;

  bool __uses_refcount() const;

public:
  explicit __libcpp_refstring(const char* __msg);
  __libcpp_refstring(const __libcpp_refstring& __s) _NOEXCEPT;
  __libcpp_refstring& operator=(const __libcpp_refstring& __s) _NOEXCEPT;
  ~__libcpp_refstring();

  _LIBCPP_HIDE_FROM_ABI const char* c_str() const _NOEXCEPT { return __imp_; }
};

inline __libcpp_refstring & __convert_to_refstring(const char *& ptr) {
  return *static_cast<__libcpp_refstring *>(static_cast<void *>(&ptr));
}

inline const __libcpp_refstring & __convert_to_refstring(const char * const& ptr) {
  return *static_cast<const __libcpp_refstring *>(static_cast<const void *>(&ptr));
}

#endif // !_LIBCPP_ABI_VCRUNTIME

_LIBCPP_END_NAMESPACE_STD

namespace std // purposefully not using versioning namespace
{

_LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION const char * __libcpp_copy_c_string(const char * __str) {
  const unsigned __len = __builtin_strlen(__str);
  char * __buffer = new char[__len+1];
  __builtin_memcpy(__buffer, __str, __len+1);
  return __buffer;
}

class _LIBCPP_EXPORTED_FROM_ABI logic_error : public exception {
#ifndef _LIBCPP_ABI_VCRUNTIME

private:
  const char * __imp_;

public:
  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION explicit logic_error(const string&);
  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION explicit logic_error(const char* __msg) {
    if (__libcpp_is_constant_evaluated()) {
      __imp_ = __libcpp_copy_c_string(__msg);
    } else {
      new (&__convert_to_refstring(__imp_)) __libcpp_refstring(__msg);
    }
  }

  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION logic_error(const logic_error& __le) _NOEXCEPT {
    if (__libcpp_is_constant_evaluated()) {
      __imp_ = __libcpp_copy_c_string(__le.__imp_);
    } else {
      new (&__convert_to_refstring(__imp_)) __libcpp_refstring(__convert_to_refstring(__le.__imp_));
    }
  }
  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION logic_error& operator=(const logic_error& __le) _NOEXCEPT {
    if (__libcpp_is_constant_evaluated()) {
      __imp_ = __libcpp_copy_c_string(__le.__imp_);
    } else {
      __convert_to_refstring(__imp_) = __convert_to_refstring(__le.__imp_);
    }
    return *this;
  }

  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION ~logic_error() _NOEXCEPT override {
    if (__libcpp_is_constant_evaluated()) {
      delete[] __imp_;
    } else {
       __convert_to_refstring(__imp_).~__libcpp_refstring();
    }  
  }

  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION const char* what() const _NOEXCEPT override {
    if (__libcpp_is_constant_evaluated()) {
      return __imp_;
    } else {
      return __convert_to_refstring(__imp_).c_str();
    }
  }
#else

public:
  explicit logic_error(const std::string&); // Symbol uses versioned std::string
  _LIBCPP_HIDE_FROM_ABI explicit logic_error(const char* __s) : exception(__s) {}
#endif
};

class _LIBCPP_EXPORTED_FROM_ABI runtime_error : public exception {
#ifndef _LIBCPP_ABI_VCRUNTIME

private:
  const char * __imp_;

public:
  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION explicit runtime_error(const string&);
  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION explicit runtime_error(const char* __msg) {
    if (__libcpp_is_constant_evaluated()) {
      __imp_ = __libcpp_copy_c_string(__msg);
    } else {
      new (&__convert_to_refstring(__imp_)) __libcpp_refstring(__msg);
    }
  }

  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION runtime_error(const runtime_error& __re) _NOEXCEPT {
    if (__libcpp_is_constant_evaluated()) {
      __imp_ = __libcpp_copy_c_string(__re.__imp_);
    } else {
      new (&__convert_to_refstring(__imp_)) __libcpp_refstring(__convert_to_refstring(__re.__imp_));
    }
  }
  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION runtime_error& operator=(const runtime_error& __re) _NOEXCEPT {
    if (__libcpp_is_constant_evaluated()) {
      __imp_ = __libcpp_copy_c_string(__re.__imp_);
    } else {
      __convert_to_refstring(__imp_) = __convert_to_refstring(__re.__imp_);
    }
    return *this;
  }

  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION ~runtime_error() _NOEXCEPT override {
    if (__libcpp_is_constant_evaluated()) {
      delete[] __imp_;
    } else {
       __convert_to_refstring(__imp_).~__libcpp_refstring();
    }  
  }

  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION const char* what() const _NOEXCEPT override {
    if (__libcpp_is_constant_evaluated()) {
      return __imp_;
    } else {
      return __convert_to_refstring(__imp_).c_str();
    }
  }
#else

public:
  explicit runtime_error(const std::string&); // Symbol uses versioned std::string
  _LIBCPP_HIDE_FROM_ABI explicit runtime_error(const char* __s) : exception(__s) {}
#endif // _LIBCPP_ABI_VCRUNTIME
};

class _LIBCPP_EXPORTED_FROM_ABI domain_error : public logic_error {
public:
  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION _LIBCPP_HIDE_FROM_ABI explicit domain_error(const string& __s);
  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION _LIBCPP_HIDE_FROM_ABI explicit domain_error(const char* __s) : logic_error(__s) {}

#ifndef _LIBCPP_ABI_VCRUNTIME
  _LIBCPP_HIDE_FROM_ABI domain_error(const domain_error&) _NOEXCEPT            = default;
  _LIBCPP_HIDE_FROM_ABI domain_error& operator=(const domain_error&) _NOEXCEPT = default;
  _LIBCPP_CONSTEXPR_OR_INLINE_EXCEPTION ~domain_error() _NOEXCEPT override { }
#endif
};

